<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_layer">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/cb_layout_example" />

    <View
        android:id="@+id/view_example"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#22000000" />

    <Button
        android:id="@+id/walkthrough_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view_example"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="606dp"
        android:background="@color/blue"
        android:text="Next" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:paddingTop="30dp"
        android:textSize="30dp"
        android:text="Walkthrough"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/view_example"
        android:layout_alignTop="@+id/view_example"
        android:layout_below="@+id/textView"
        android:layout_marginStart="7dp"
        android:layout_marginTop="160dp"
        android:text="You can chat with a random friend(CB) for 24 hours"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/view_example"
        android:layout_alignTop="@+id/view_example"
        android:layout_marginStart="311dp"
        android:layout_marginTop="431dp"
        android:layout_below="@+id/textView"
        android:text="This shows the remaining time for a new CB to be chosen"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/arrow_image"
        android:layout_width="83dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/view_example"
        android:layout_alignTop="@+id/view_example"
        android:layout_marginStart="221dp"
        android:layout_marginTop="425dp"
        android:layout_below="@+id/textView"
        app:srcCompat="@drawable/arrow" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/view_example"
        android:layout_alignTop="@+id/view_example"
        android:layout_marginStart="145dp"
        android:layout_marginTop="354dp"
        android:layout_below="@+id/textView"
        android:text="Chat with your CB!"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/walkthrough_next_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="153dp"
        android:layout_marginTop="681dp"
        android:text="swipe left or right"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/walkthrough_next_btn"
        android:paddingTop="3.8dp"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="or" />

</RelativeLayout>