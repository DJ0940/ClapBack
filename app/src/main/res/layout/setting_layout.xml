<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/settings_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/logo"
        android:text="Settings"
        android:textSize="50dp"/>

    <Button
        android:id="@+id/change_password_button"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_banner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_background"
        android:text="CHANGE PASSWORD"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/change_email_button"
        android:layout_width="290dp"
        android:layout_below="@id/change_password_button"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_background"
        android:text="CHANGE EMAIL"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/delete_account_button"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_email_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_background"
        android:text="DELETE ACCOUNT"
        android:textColor="@color/red" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/delete_account_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_background"
        android:text="GO BACK"
        android:textColor="@color/black" />


</RelativeLayout>


