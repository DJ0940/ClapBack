<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_layer">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/other_profile_image"
        android:layout_width="296dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/mongle"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/other_username"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="nickname"
        android:textAlignment="center"
        android:layout_alignStart="@+id/other_profile_image"
        android:layout_alignEnd="@+id/other_profile_image"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/other_profile_image" />

    <TextView
        android:id="@+id/social"
        android:textSize="20dp"
        android:autoLink="web"
        android:linksClickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="(social media)"
        android:textAlignment="center"
        android:layout_alignStart="@+id/other_username"
        android:layout_alignEnd="@+id/other_username"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/other_username" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="description"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_alignStart="@+id/social"
        android:layout_alignEnd="@+id/social"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/social" />

    <TextView
        android:id="@+id/book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Favorite book"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/description" />

    <TextView
        android:id="@+id/movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Favorite movie"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/book" />

    <TextView
        android:id="@+id/music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Favorite song"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/movie" />

    <Button
        android:id="@+id/report_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/red_btn_background"
        android:text="Report"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/music"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/remove_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove Friend"
        android:textColor="@color/red"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/report_btn" />

</RelativeLayout>